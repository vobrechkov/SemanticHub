{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Agents": "Information",
      "Azure.Core": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Resilience": {
    "Enabled": true,
    "HttpClient": {
      "Retry": {
        "MaxAttempts": 3,
        "BaseDelayMs": 500,
        "UseExponentialBackoff": true,
        "MaxDelayMs": 30000
      },
      "CircuitBreaker": {
        "FailureThreshold": 0.5,
        "SamplingDurationSeconds": 30,
        "MinimumThroughput": 10,
        "BreakDurationSeconds": 30
      },
      "Timeout": {
        "TotalRequestTimeoutSeconds": 30
      }
    },
    "WebScraping": {
      "MaxAttempts": 3,
      "BaseDelayMs": 250,
      "UseExponentialBackoff": true,
      "MaxDelayMs": 10000
    }
  },
  "AgentFramework": {
    "AzureOpenAI": {
      "Endpoint": "",
      "ChatDeployment": "gpt-4o-mini",
      "EmbeddingDeployment": "text-embedding-3-small",
      "ApiKey": ""
    },
    "DefaultAgent": {
      "Name": "SemanticHub Assistant",
      "Instructions": "You are an intelligent assistant that helps users manage and query their knowledge base. You can help with document ingestion, semantic search, and knowledge retrieval.",
      "Model": "gpt-4o-mini"
    },
    "Memory": {
      "EnableMem0": false,
      "EnableWhiteboard": true,
      "Provider": "AzureSearch",
      "MaxResults": 5,
      "MinRelevance": 0.6,
      "AzureSearch": {
        "Endpoint": "",
        "ApiKey": "",
        "IndexName": "knowledge-index",
        "EnableSemanticRanker": false,
        "KeyField": "id",
        "ContentField": "content",
        "TitleField": "title",
        "SummaryField": "summary",
        "SemanticConfiguration": "semantic-config",
        "VectorField": "contentVector",
        "VectorKNearestNeighbors": 8,
        "ParentDocumentField": "parentDocumentId",
        "ChunkTitleField": "chunkTitle",
        "ChunkIndexField": "chunkIndex",
        "MetadataField": "metadataJson"
      },
      "OpenSearch": {
        "Endpoint": "http://localhost:9200",
        "IndexName": "knowledge-index",
        "KeyField": "id",
        "ContentField": "content",
        "TitleField": "title",
        "SummaryField": "summary",
        "VectorField": "contentVector",
        "VectorKNearestNeighbors": 8,
        "ParentDocumentField": "parentDocumentId",
        "ChunkTitleField": "chunkTitle",
        "ChunkIndexField": "chunkIndex",
        "MetadataField": "metadataJson",
        "AcceptAllCertificates": true
      }
    }
  }
}
